


<div class="home-video-wrapper">
  <%= video_tag "https://res.cloudinary.com/dgq92f6st/video/upload/v1582114114/bannervideo_dccmev.mp4", \
                autoplay: :autoplay, loop: true, muted: :muted,
                class: "home-video", preload: :metadata
                # poster: "home_video_poster.png",
                # poster_skip_pipeline: true
  %>
  <div class="banner">
    <div class="text-center landing-header">
      <h1 id="giant">It's game time</h1>
      <h1 class="text-center"><strong> Watch your team</strong></h1>
