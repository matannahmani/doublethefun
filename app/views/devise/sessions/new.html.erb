<div class="row">
  <div class="col-sm-6" offset-sm-3>


    <div class="loginscreen m-12">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <span id="email"><%= f.input :email,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "email" } %></span>
      <span id="password"><%= f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" } %></span>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    <div class="form-actions">
      <span id="submit"><%= f.button :submit, "Log in" %></span>
    </div>
    <% end %>
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
</div>
