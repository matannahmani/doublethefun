<div class="container new-event">
  <div class="row justify-content-center">
    <div class="col-lg-5 event-box">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "password" }%>
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "first name"}%>
          <%= f.input :last_name,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "last name"}%>
          <%= f.input :location,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "location"}%>
          <%= f.input :team,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "team"}%>
          <%= f.input :photo,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "photo"}%>

        <div class="center-button">
          <div class="center-button">
            <%= f.button :submit, "Sign up", class: "create-button center-button" %>
          </div>
        </div>

      <% end %>
      <div class="optional-bottom">
        <p>Already a member?</p>
        <%= link_to "Sign in", user_session_path %>
      </div>
    </div>
  </div>
</div>
</div>
