<div class="navbar">
  <span>Here is a Navbar</span>
</div>
<div class="banner">
  <img src="">
  <h1></h1>
</div>
<% if !@event.nil? %>
<div class="card-product" style="position: relative;">
  <p id="update"><%= link_to '<i class="fas fa-edit fa-2x"></i>'.html_safe, edit_event_path(@event), method: :get %></p>
  <p id="delete"><%= link_to '<i class="fas fa-trash-alt fa-2x"></i>'.html_safe, destroy_path(@event), method: :delete %></p>
  <% if @event.photo.attached? %>
    <%= cl_image_tag @event.photo.key, class: :"card-trip-user" %>
  <% else %>
    <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user" />
  <% end %>
  <div class="card-product-infos">
    <h2><%= @event.name %></h2>
    <h3><%= @event.team %></h3>
    <div class="description-wrap"><p>- <%= @event.description %></p></div>
    <p><strong>Location: <%= @event.location %></strong></h3>
  </div>
</div>
<% end %>

<div
  id="map"
  style="width: 100%;
  height: 300px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>
