<div class="container">
  <div class="cardbox">
    <% if !@events.nil? %>
      <% @events.each do |event|  %>
      <a href="<%= event_path(event) %>">
        <div class="card-trip">
          <%= link_to "", event_attendances_path(event), class: "fas fa-user-plus", method: :post %>
          <% if event.photo.attached? %>
            <%= cl_image_tag event.photo.key, height: 150, width: 150, crop: :fill %>
          <% else %>
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
          <%end%>
          <div class="card-trip-infos">
            <div>
              <h2><%= event.name %></h2>
              <p><%= event.description[0..10] %></p>
            </div>
            <h2 class="card-trip-pricing"><%= event.location %></h2>
            <% if User.find(event.user_id).photo.attached? %>
              <%= cl_image_tag User.find(event.user_id).photo.key, class: :"card-trip-user avatar-bordered" %>
            <% else %>
              <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
            <% end %>
          </div>
        </div>
      </a>
      <% end %>
    <% end %>
  </div>
</div>
